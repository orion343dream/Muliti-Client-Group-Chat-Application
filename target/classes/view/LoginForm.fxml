<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="278.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.groupchatapplication.controller.LoginController">
    <VBox alignment="CENTER" fillWidth="false" layoutY="-1.0" prefHeight="280.0" prefWidth="380.0" spacing="20.0" style="-fx-background-color: #2a9364; -fx-background-radius: 10px; -fx-border-radius: 10px;">
        <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
        </padding>
        <TextField fx:id="txtUserName" prefHeight="26.0" prefWidth="208.0" promptText="Enter Username" scaleShape="false" style="-fx-background-color: rgb(164,196,172);">
         <effect>
            <Reflection />
         </effect></TextField>
        <Button alignment="CENTER" onAction="#loginOnAction" opacity="0.88" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #02ff27;" text="JOIN">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </VBox>
</AnchorPane>
